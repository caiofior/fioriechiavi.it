<?php
$title = $GLOBALS['db']->config->siteName;
if (
        is_array($this->object) &&
        array_key_exists('taxa', $this->object) &&
        $this->object['taxa']->getData('name') != '') {
   $taxa = $this->object['taxa'];
   $taxaKind = $taxa->getTaxaKind();
   $title .= ' :: '.$taxaKind->getData('initials').' '.$taxa->getData('name');
}
?>
<title><?php echo $title;?></title>
